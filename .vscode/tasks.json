{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Console",
            "command": "dotnet build \"${workspaceFolder}/iTunes.Editor.Console/iTunes.Editor.Console.csproj\"",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Avalonia",
            "command": "dotnet build \"${workspaceFolder}/iTunes.Editor.Avalonia/iTunes.Editor.Avalonia.csproj\"",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}